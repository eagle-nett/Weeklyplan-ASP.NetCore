@model IEnumerable<QuanLy.Models.PhongBan>

@{
    ViewData["Title"] = "Danh sách Phòng Ban";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary"><i class="fas fa-building me-2"></i> @ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-primary rounded-pill shadow-sm">
            <i class="fas fa-plus-circle me-2"></i> Thêm Phòng Ban
        </a>
    </div>

    <!-- Ô tìm kiếm -->
    <div class="mb-4">
        <input id="searchBox" type="text" class="form-control form-control-lg shadow-sm" 
               placeholder="🔍 Tìm kiếm phòng ban hoặc công ty..." />
    </div>

    <!-- Danh sách phòng ban -->
    <div id="phongBanList" class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-4 phongban-card">
                <div class="card shadow-sm border-0 rounded-4 h-100">
                    <div class="card-body">
                        <h5 class="fw-bold text-primary mb-2">
                            <i class="fas fa-door-open me-2"></i> @item.TenPhongBan
                        </h5>
                        <p class="text-muted mb-1"><i class="fas fa-code me-2"></i> Mã: @item.MaPhongBan</p>
                        <p class="text-muted"><i class="fas fa-city me-2"></i> Công ty: @item.TenCongTy</p>

                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <a asp-action="Edit" asp-route-id="@item.MaPhongBan" 
                               class="btn btn-sm btn-outline-warning rounded-pill">
                                <i class="fas fa-edit"></i> Sửa
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.MaPhongBan" 
                               class="btn btn-sm btn-outline-danger rounded-pill">
                                <i class="fas fa-trash"></i> Xóa
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Search Script -->
<script>
    document.getElementById("searchBox").addEventListener("keyup", function () {
        var keyword = this.value.toLowerCase();
        var cards = document.getElementsByClassName("phongban-card");

        Array.from(cards).forEach(function (card) {
            var text = card.innerText.toLowerCase();
            card.style.display = text.includes(keyword) ? "block" : "none";
        });
    });
</script>
