    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4 py-3">
                    <h3 class="mb-0 fw-bold">
                        <i class="fas fa-building me-2"></i> @ViewData["Title"]
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="MaPhongBan" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-code"></i></span>
                                <input asp-for="MaPhongBan" class="form-control" placeholder="Nhập mã phòng ban" />
                            </div>
                            <span asp-validation-for="MaPhongBan" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TenPhongBan" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-door-open"></i></span>
                                <input asp-for="TenPhongBan" class="form-control" placeholder="Nhập tên phòng ban" />
                            </div>
                            <span asp-validation-for="TenPhongBan" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TenCongTy" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-city"></i></span>
                                <select asp-for="TenCongTy" class="form-select">
                                    <option value="">-- Chọn công ty --</option>
                                    <option value="LHH">LHH</option>
                                    <option value="TTP">TTP</option>
                                </select>
                            </div>
                            <span asp-validation-for="TenCongTy" class="text-danger small"></span>
                        </div>

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger mt-3">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <p class="mb-0">@error.ErrorMessage</p>
                                }
                            </div>
                        }

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                                <i class="fas fa-arrow-left me-2"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary rounded-pill px-4">
                                <i class="fas fa-save me-2"></i> Lưu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
