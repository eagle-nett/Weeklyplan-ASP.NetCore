@model QuanLy.Models.PhongBan

@{
    ViewData["Title"] = "Xóa Phòng Ban";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-danger text-white text-center rounded-top-4 py-3">
                    <h3 class="mb-0 fw-bold">
                        <i class="fas fa-exclamation-triangle me-2"></i> @ViewData["Title"]
                    </h3>
                </div>
                <div class="card-body p-4">
                    <h5 class="text-center text-muted mb-4">
                        Bạn có chắc chắn muốn xóa phòng ban này không?
                    </h5>

                    <dl class="row">
                        <dt class="col-sm-4 fw-semibold">Mã Phòng Ban</dt>
                        <dd class="col-sm-8">@Model.MaPhongBan</dd>

                        <dt class="col-sm-4 fw-semibold">Tên Phòng Ban</dt>
                        <dd class="col-sm-8">@Model.TenPhongBan</dd>

                        <dt class="col-sm-4 fw-semibold">Tên Công Ty</dt>
                        <dd class="col-sm-8">@Model.TenCongTy</dd>
                    </dl>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="MaPhongBan" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                                <i class="fas fa-times me-2"></i> Hủy
                            </a>
                            <button type="submit" class="btn btn-danger rounded-pill px-4">
                                <i class="fas fa-trash-alt me-2"></i> Xóa
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
