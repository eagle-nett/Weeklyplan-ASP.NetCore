@{
    ViewData["Title"] = "Xác thực quyền chỉnh sửa Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    body {
        background-color: #f9fafb;
    }

    .auth-card {
        max-width: 500px;
        margin: 80px auto;
        padding: 40px 35px;
        border-radius: 20px;
        background: #ffffff;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.1);
        animation: fadeIn 0.4s ease-in-out;
    }

    .auth-card h2 {
        font-weight: 800;
        font-size: 24px;
        text-align: center;
        margin-bottom: 25px;
        color: #111827;
    }

    .auth-card .form-label {
        font-weight: 600;
        color: #374151;
        margin-bottom: 6px;
    }

    .auth-card .form-control {
        border-radius: 12px;
        padding: 12px 16px;
        border: 1px solid #d1d5db;
        font-size: 16px;
    }

    .auth-card .form-control:focus {
        border-color: #6366f1;
        box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.2);
    }

    .auth-card .btn-primary {
        background: linear-gradient(to right, #6366f1, #8b5cf6);
        border: none;
        border-radius: 10px;
        padding: 12px 25px;
        font-weight: 700;
        font-size: 16px;
        color: #fff;
        transition: all 0.3s ease;
    }

    .auth-card .btn-primary:hover {
        background: linear-gradient(to right, #4f46e5, #7c3aed);
        box-shadow: 0 10px 20px rgba(99, 102, 241, 0.3);
        transform: translateY(-2px);
    }

    .auth-card .btn-secondary {
        background-color: #f3f4f6;
        color: #1f2937;
        font-weight: 600;
        padding: 12px 25px;
        border: 1px solid #d1d5db;
        border-radius: 10px;
    }

    .auth-card .btn-secondary:hover {
        background-color: #e5e7eb;
    }

    .auth-card .alert-danger {
        background-color: #fee2e2;
        color: #b91c1c;
        padding: 12px 16px;
        border-radius: 10px;
        font-size: 15px;
        margin-bottom: 20px;
    }

</style>

<div class="auth-card">
    <h2><i class="fa-solid fa-shield-halved me-2"></i>@ViewData["Title"]</h2>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div><i class="fa-solid fa-circle-exclamation me-1"></i> @error.ErrorMessage</div>
            }
        </div>
    }

    <form asp-action="XacThucAdmin" method="post">
        <div class="mb-4">
            <label for="password" class="form-label"><i class="fa-solid fa-lock me-1"></i> Mật khẩu xác minh</label>
            <input type="password" name="password" class="form-control" placeholder="Nhập mật khẩu đặc biệt..." required />
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-check-circle me-1"></i> Xác nhận
            </button>
            <a asp-action="DanhSach" class="btn btn-secondary">
                <i class="fa-solid fa-arrow-left me-1"></i> Quay lại
            </a>
        </div>
    </form>
</div>
