@model QuanLy.Models.PhongBan

@{
    ViewData["Title"] = "Xóa Phòng Ban";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
        background: #f8f9fc;
    }

    .card-custom {
        border-radius: 20px;
        border: none;
        background: #fff;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card-custom:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 28px rgba(0, 0, 0, 0.1);
        }

    h3 {
        font-weight: 700;
        color: #dc3545;
    }

    .btn-danger {
        background: linear-gradient(135deg, #dc3545, #b52b3a);
        border: none;
        border-radius: 12px;
        font-weight: 600;
        transition: 0.3s;
    }

        .btn-danger:hover {
            background: linear-gradient(135deg, #b52b3a, #991f2e);
            transform: translateY(-2px);
        }

    .btn-outline-secondary {
        border-radius: 12px;
        font-weight: 500;
        transition: 0.3s;
    }

        .btn-outline-secondary:hover {
            background: #f1f3f5;
            transform: translateY(-2px);
        }

    dl dt {
        font-weight: 600;
        color: #495057;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-custom p-4">
                <div class="text-center mb-4">
                    <div class="mb-3">
                        <i class="bi bi-exclamation-triangle-fill text-danger fs-1"></i>
                    </div>
                    <h3>@ViewData["Title"]</h3>
                    <p class="text-muted">Bạn có chắc chắn muốn xóa phòng ban này không?</p>
                </div>

                <div class="mb-4">
                    <dl class="row">
                        <dt class="col-sm-4">Mã Phòng Ban</dt>
                        <dd class="col-sm-8">@Model.MaPhongBan</dd>

                        <dt class="col-sm-4">Tên Phòng Ban</dt>
                        <dd class="col-sm-8">@Model.TenPhongBan</dd>

                        <dt class="col-sm-4">Tên Công Ty</dt>
                        <dd class="col-sm-8">@Model.TenCongTy</dd>
                    </dl>
                </div>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="MaPhongBan" />
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-danger px-4">Xóa</button>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">Hủy</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
