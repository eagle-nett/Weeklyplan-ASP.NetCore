@model List<QuanLy.ViewModels.TrangThaiViewModel>

@{
    ViewData["Title"] = "Trạng thái báo cáo tuần";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var total = ViewBag.Total ?? 0;
    var sent = ViewBag.Sent ?? 0;
    var notSent = ViewBag.NotSent ?? 0;
}

<div class="container">
    <div class="card mt-3 shadow">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-tasks"></i> Trạng thái báo cáo tuần</h5>
            <div>
                <span class="me-2">Tổng: <strong>@total</strong></span>
                <span class="badge bg-success me-2">Đã gửi: @sent</span>
                <span class="badge bg-danger">Chưa gửi: @notSent</span>
            </div>
        </div>

        <div class="card-body">
            <form method="get" class="row g-3 mb-3">
                <div class="col-md-4">
                    <label class="form-label">Tuần</label>
                    <select name="tuan" asp-items="ViewBag.TuanOptions" class="form-select">
                        <option value="">-- Chọn tuần (bắt buộc) --</option>
                    </select>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Phòng ban</label>
                    <select name="maPhongBan" asp-items="ViewBag.PhongBanOptions" class="form-select">
                        <option value="">-- Tất cả phòng ban --</option>
                    </select>
                </div>

                <div class="col-md-4 d-flex align-items-end">
                    <div class="form-check me-3">
                        <input class="form-check-input" type="checkbox" name="chiHienThiChuaGui" value="true" id="chkChuaGui" @(ViewBag.ChiHienThiChuaGui == true ? "checked" : "") />
                        <label class="form-check-label" for="chkChuaGui">Chỉ hiển thị chưa gửi</label>
                    </div>
                    <div class="form-check me-3">
                        <input class="form-check-input" type="checkbox"
                               name="chiHienThiDaGui" value="true" id="chkDaGui"
                               @(ViewBag.ChiHienThiDaGui == true ? "checked" : "") />
                        <label class="form-check-label" for="chkDaGui">Chỉ hiện đã gửi</label>
                    </div>

                    <button type="submit" class="btn btn-primary ms-auto">Lọc</button>
                </div>
            </form>

            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-secondary text-center">
                    <i class="fas fa-info-circle"></i>
                    Vui lòng chọn <strong>Tuần</strong> để hiển thị trạng thái (dữ liệu sẽ hiện sau khi lọc).
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle">
                        <thead class="table-light text-center">
                            <tr>
                                <th>STT</th>
                                <th>Tuần</th>
                                <th>Từ - Đến</th>
                                <th>Bộ phận</th>
                                <th>Tên bộ phận</th>
                                <th>Mã NV</th>
                                <th>Tên NV</th>
                                <th>Tên QLTT</th>
                                <th>Thời gian gửi</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var row in Model)
                            {
                                <tr class="@(row.DaGui ? "" : "table-danger")">
                                    <td class="text-center">@row.STT</td>
                                    <td class="text-center">@row.Tuan</td>
                                    <td class="text-center">@row.TuNgay.ToString("dd/MM/yyyy") - @row.DenNgay.ToString("dd/MM/yyyy")</td>
                                    <td class="text-center">@row.MaPhongBan</td>
                                    <td>@row.TenPhongBan</td>
                                    <td class="text-center">@row.MaNV</td>
                                    <td>@row.TenNV</td>
                                    <td>@row.TenQuanLy</td>
                                    <td class="text-center">
                                        @if (row.ThoiGianGui.HasValue)
                                        {
                                            @row.ThoiGianGui.Value.ToString("HH:mm dd/MM/yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (row.DaGui)
                                        {
                                            <span class="badge bg-success">Đã gửi</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Chưa gửi</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
